<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Settings"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="92dp"
        android:src="@drawable/pics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="247dp"
        android:layout_height="57dp"
        android:layout_marginTop="92dp"
        android:text="Esther Omo-Idonije krisidonije@gmail.com"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold|normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="422dp"
        android:layout_height="67dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/input_big"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingTop="1dp"
        android:paddingEnd="20dp"
        android:text="Password"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/notification"
        android:layout_width="423dp"
        android:layout_height="68dp"
        android:layout_marginTop="312dp"
        android:background="@drawable/input_big"
        android:drawableStart="@drawable/ic_baseline_notifications_none_24"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingTop="1dp"
        android:paddingEnd="20dp"
        android:text="Notification"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/help"
        android:layout_width="413dp"
        android:layout_height="55dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/input_big"
        android:drawableStart="@drawable/ic_baseline_help_outline_24"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingTop="1dp"
        android:paddingEnd="20dp"
        android:text="Help"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>